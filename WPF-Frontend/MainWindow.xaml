<Window x:Class="WPF_Frontend.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Frontend"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Orientation="vertical">
        <Button Name="AddCurrentAccount" Content="Create new current account"/>
        <Button Name="ShowAccount" Content="Print selected account"/>
        <ListView Name="ListAccount" ItemsSource="{Binding listOfCurrentAccountsNr}"/>

    </StackPanel>
</Window>
